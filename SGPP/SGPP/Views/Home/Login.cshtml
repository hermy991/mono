@model SGPP.GSPPModels.UC.CLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string _ErrorUser = ViewBag.ErrorUser;
}

<div class="section_title_metro fluid_wrap">
    <ul class="col-lg-8 pl0">
        <li class="fl">
            <h1 class="the_title_metro">Logín</h1>
        </li>
    </ul>
</div>

<div id="dashboard_right_column" class="right_column_metro col-lg-12 pr0 pl0">
    <div class="drag_and_drop_container fluid_wrap reset doc_en_proceso">
        @*<div class="drag_container_title">
                <h2>Información</h2>
            </div>*@

        <div class="drag_container_the_content_area drag_content_area_fluid_wrap">
            <form id="" class="standard_form fluid_wrap">
                <ul class="form_items_container col-lg-4 pr0">
                    @*<label class="subtitle_label">Información de Credenciales</label>*@
                    <li>
                        @Html.Label("Usuario")
                        @Html.TextBoxFor(model => model.UserName, new { @class = "col-lg-12 form-control" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </li>
                    <li>
                        @Html.LabelFor(model => model.Pass)
                        @Html.PasswordFor(model => model.Pass, new { @class = "col-lg-12 form-control" })
                        @Html.ValidationMessageFor(model => model.Pass)
                    </li>
                    <li class="fr">
                        <input type="submit" class="button_go_back btstyles col-lg-3 fr mn" value="Cancelar" formaction="/Home/Index" />
                        <input type="submit" class="button_save btstyles col-lg-3 fr mn mn_minus" value="Crear" formaction="/Home/Login" />
                    </li>
                    <li>
                        @Html.ActionLink("Registrar Usuario", "CreateUser", "User")
                    </li>
                </ul>

            </form><!--end eis_form-->
        </div><!--end drag_container_the_content_area-->
    </div><!--end drag_and_drop_container-->
</div><!--end dashboard_right_column-->
