                <td>
                    <h style="color: red">@ViewBag.CreateUserError</h>
                </td>
            </td>
        </tr>
        <tr>
            <td style="color: blue">
                @Html.DisplayNameFor(model => model.Person.Company.DisplayName)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Person.Company.DisplayName)

                @Html.ValidationMessageFor(model => model.Person.Company.DisplayName)
            </td>
        </tr>
        <tr>
            <td style="color: blue">
                @Html.DisplayNameFor(model => model.Person.Company.Local)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Person.Company.Local)

                @Html.ValidationMessageFor(model => model.Person.Company.Local)
            </td>
        </tr>
        <tr>
            <td style="color: blue">
                @Html.DisplayNameFor(model => model.Person.FirstName)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Person.FirstName)

                @Html.ValidationMessageFor(model => model.Person.FirstName)
            </td>
        </tr>
        <tr>
            <td style="color: blue">
                @Html.DisplayNameFor(model => model.Person.LastName)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Person.LastName)
                @Html.ValidationMessageFor(model => model.Person.LastName)
            </td>
        </tr>
        <tr>
            <td style="color: blue">
                @Html.DisplayNameFor(model => model.Person.DocumentTypeId)
            </td>
            <td>
