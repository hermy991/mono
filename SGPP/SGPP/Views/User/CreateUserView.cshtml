            </td>
            <td>
                @Html.DropDownList("SexId", "-Seleccionar-")
                @Html.ValidationMessageFor(model => model.Person.Sex_ID)
            </td>
        </tr>
        <tr>
            <td style="color: blue">
                @Html.DisplayNameFor(model => model.Email)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Login.UserName)
                @Html.ValidationMessageFor(model => model.Login.UserName)
            </td>
        </tr>
        <tr>
            <td style="color: blue">
                @Html.DisplayNameFor(model => model.Login.Pass)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Login.Pass)
                @Html.ValidationMessageFor(model => model.Login.Pass)
            </td>
        </tr>
        <tr>
            <td style="color: blue">Repetir @Html.DisplayNameFor(model => model.Login.PassRep)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Login.PassRep)
                @Html.ValidationMessageFor(model => model.Login.PassRep)
            </td>
        </tr>

